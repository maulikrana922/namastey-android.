<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.AlbumDetailActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.namastey.viewModel.CreateAlbumViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_45sdp">

            <RelativeLayout
                android:id="@+id/rlmainalbum"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:id="@+id/rlalbumheader"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/ivAlbumDetailBack"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:contentDescription="@string/app_name"
                        android:onClick="onClickAlbumDetailBack"
                        android:src="@drawable/ic_back_new"
                        app:tint="@color/color_black_text" />

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvAlbumTitle"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_3sdp"                        android:layout_toRightOf="@+id/ivAlbumDetailBack"
                        android:text="@string/edit_album"
                        android:singleLine="true"
                        android:textColor="@color/color_black_text"
                        android:textSize="@dimen/_14sdp"
                        app:typeface="MULI_EXTRA_BOLD"/>

                    <ImageView
                        android:id="@+id/ivMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:contentDescription="@string/app_name"
                        android:onClick="onClickAlbumDetailMore"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_more"
                        android:visibility="gone"
                        app:tint="@color/color_black_text" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rleditalbum"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:visibility="gone"
                    tools:ignore="MissingConstraints">

                    <com.namastey.customViews.CustomEditText
                        android:id="@+id/edtAlbumName"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_45sdp"
                        android:cursorVisible="true"
                        android:layout_toLeftOf="@id/tvalbumtitlesave"
                        android:textColor="@color/color_black_text"
                        android:textSize="@dimen/_20sdp" />

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvalbumtitlesave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:contentDescription="@string/app_name"
                        android:onClick="dialogSave"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/album_title_save"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/_18sdp" />


                </RelativeLayout>
            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAlbumDetail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:outlineSpotShadowColor="@color/colorGray"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlmainalbum"
                app:layout_constraintVertical_bias="0.0"
                app:spanCount="2"
                tools:listitem="@layout/row_album_detail" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>