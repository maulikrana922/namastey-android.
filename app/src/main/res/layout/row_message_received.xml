<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp">

    <LinearLayout
        android:id="@+id/llMessageReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_4sdp"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            style="@style/CustomCardViewStyleChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            app:cardElevation="@dimen/_4sdp"
            android:theme="@style/Theme.MaterialComponents"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:minWidth="@dimen/_112sdp"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <com.namastey.customViews.CustomTextView
                    android:id="@+id/tvMessageReceived"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:text="@string/app_name"
                    android:textColor="@color/color_black_text"
                    android:textSize="14sp"
                    app:typeface="MULI_REGULAR" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.namastey.customViews.CustomTextView
            android:id="@+id/tvMessageReceivedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_4sdp"
            android:drawablePadding="@dimen/_8sdp"
            android:text="7:21PM"
            android:textColor="@color/color_chip_gray"
            android:textSize="@dimen/_8sdp"
            app:typeface="MULI_SEMIBOLD" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/flImageReceived"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/_12sdp"
        android:visibility="gone">

        <com.namastey.customViews.RoundImageView
            android:id="@+id/ivImageReceived"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/default_placeholder"
            app:cornerRadius="@dimen/_8sdp"
            app:roundedCorners="topRight|topLeft|bottomRight" />

        <com.namastey.customViews.CustomTextView
            android:id="@+id/tvImageReceivedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:drawableStart="@drawable/ic_clock_white"
            android:drawablePadding="@dimen/_8sdp"
            android:gravity="start|center"
            android:padding="@dimen/_10sdp"
            android:text="7:21PM"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:typeface="MULI_SEMIBOLD" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/llRecordingReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/rounded_white_solid"
        android:minWidth="@dimen/_180sdp"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/ivRecordReceived"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:src="@drawable/ic_play"
                tools:ignore="ContentDescription" />

            <com.namastey.customViews.CustomTextView
                android:id="@+id/tvReadableContentReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_toEndOf="@id/ivRecordReceived"
                android:gravity="start|center"
                android:text="@string/readable_content"
                android:textColor="@color/color_chip_gray"
                android:textSize="14sp"
                app:typeface="MULI_SEMIBOLD" />

            <com.namastey.customViews.CustomTextView
                android:id="@+id/tvRecordedDurationReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvReadableContentReceived"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_toEndOf="@id/ivRecordReceived"
                android:gravity="start|center"
                android:textColor="@color/color_chip_gray"
                android:textSize="14sp"
                app:typeface="MULI_SEMIBOLD" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/colorLightGrayView" />

        <com.namastey.customViews.CustomTextView
            android:id="@+id/tvRecordingTimeReceived"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:drawableStart="@drawable/ic_clock_grey"
            android:drawablePadding="@dimen/_8sdp"
            android:gravity="start|center"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/color_chip_gray"
            android:textSize="14sp"
            app:typeface="MULI_SEMIBOLD" />
    </LinearLayout>
</LinearLayout>