<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp">

    <LinearLayout
        android:id="@+id/llMessageReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_4sdp"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            style="@style/CustomCardViewStyleChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            app:cardElevation="@dimen/_4sdp"
            android:theme="@style/Theme.MaterialComponents"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:minWidth="@dimen/_112sdp"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <com.namastey.customViews.CustomTextView
                    android:id="@+id/tvMessageReceived"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:text="@string/app_name"
                    android:textColor="@color/color_black_text"
                    android:textSize="14sp"
                    app:typeface="MULI_REGULAR" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.namastey.customViews.CustomTextView
            android:id="@+id/tvMessageReceivedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_4sdp"
            android:drawablePadding="@dimen/_8sdp"
            android:text="7:21PM"
            android:textColor="@color/color_chip_gray"
            android:textSize="@dimen/_8sdp"
            app:typeface="MULI_SEMIBOLD" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/flImageReceived"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/_12sdp"
        android:visibility="gone">

        <com.namastey.customViews.RoundImageView
            android:id="@+id/ivImageReceived"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/default_placeholder"
            app:cornerRadius="@dimen/_8sdp"
            app:roundedCorners="topRight|topLeft|bottomRight" />

        <com.namastey.customViews.CustomTextView
            android:id="@+id/tvImageReceivedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:drawableStart="@drawable/ic_clock_white"
            android:drawablePadding="@dimen/_8sdp"
            android:gravity="start|center"
            android:padding="@dimen/_10sdp"
            android:text="7:21PM"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:typeface="MULI_SEMIBOLD" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/llRecordingReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:minWidth="@dimen/_180sdp"
        android:orientation="vertical"
        android:visibility="gone">


        <com.google.android.material.card.MaterialCardView
            style="@style/CustomCardViewStyleChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:theme="@style/Theme.MaterialComponents"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardElevation="@dimen/_4sdp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/body_lay"
                android:layout_width="220dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_4sdp"
                android:paddingBottom="2dp">

                <LinearLayout
                    android:id="@+id/uploadLay"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp">

                    <TextView
                        android:id="@+id/tvRecordingTimeReceived"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="25dp"
                        android:text="11:15 PM"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black_overlay"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/song_seekbar_received"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tvRecordedDurationReceived"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_toEndOf="@+id/ivRecordReceived"
                    android:paddingStart="10dp"
                    android:paddingEnd="15dp"
                    android:progressBackgroundTint="@color/color_text"
                    android:progressTint="@color/colorRed"
                    android:thumbTint="@color/color_text_red" />

                <TextView
                    android:id="@+id/filename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivRecordReceived"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="" />

                <TextView
                    android:id="@+id/tvRecordedDurationReceived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="start"
                    android:layout_marginTop="-5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toStartOf="@+id/uploadLay"
                    android:layout_toEndOf="@+id/ivRecordReceived"
                    android:text="00:00"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="visible" />


                <ImageView
                    android:id="@+id/ivRecordReceived"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="18dp"
                    android:src="@drawable/ic_play_white"
                    app:tint="@color/post_video_text" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

