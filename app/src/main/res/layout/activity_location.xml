<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.LocationActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.namastey.viewModel.LocationViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAddComment"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite">

              <!--  <ImageView
                    android:id="@+id/llLocationBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pink_bar"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />-->

                <ImageView
                    android:id="@+id/ivLocationBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:contentDescription="@string/app_name"
                    android:onClick="onClickLocationBack"
                    android:src="@drawable/ic_back_new"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.namastey.customViews.CustomTextView
                    android:id="@+id/tvHeader"
                    style="@style/tvWrapBlackStyle"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/my_locations"
                    android:textSize="@dimen/actionBarTitle"
                    app:layout_constraintBottom_toBottomOf="@id/ivLocationBack"
                    app:layout_constraintStart_toEndOf="@id/ivLocationBack"
                    app:layout_constraintTop_toTopOf="@id/ivLocationBack"
                    app:typeface="MULI_SEMIBOLD" />

                <com.namastey.customViews.CustomTextView
                    android:id="@+id/tvCurrentLocation"
                    style="@style/tvWrapWhiteStyle"
                    android:layout_width="match_parent"
                    android:gravity="start|center"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="@string/current_location"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHeader"
                    app:typeface="MULI_EXTRA_BOLD" />

                <LinearLayout
                    android:id="@+id/llMyCurrentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:onClick="onClickMyCurrentLocation"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_15sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvCurrentLocation">

                    <ImageView
                        android:id="@+id/ivCurrentLocation"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:onClick="onClickLocationBack"
                        android:src="@drawable/ic_location_new"
                        app:tint="@color/colorRed" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical">

                        <com.namastey.customViews.CustomTextView
                            android:id="@+id/tvMyCurrentLocation"
                            style="@style/tvWrapWhiteStyle"
                            android:layout_width="match_parent"
                            android:gravity="start|center"
                            android:text="@string/my_current_location"
                            android:textColor="@color/color_black_text"
                            android:textSize="16sp"
                            app:typeface="MULI_SEMIBOLD" />

                        <com.namastey.customViews.CustomTextView
                            android:id="@+id/tvMyCurrentAddress"
                            style="@style/tvWrapWhiteStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:gravity="start|center"
                            android:text="@string/my_current_address"
                            android:textColor="@color/color_text"
                            android:textSize="14sp"
                            app:typeface="MULI_SEMIBOLD" />

                    </LinearLayout>

                </LinearLayout>

                <com.namastey.customViews.CustomTextView
                    android:id="@+id/tvRecentPassportLocation"
                    style="@style/tvWrapWhiteStyle"
                    android:layout_width="match_parent"
                    android:gravity="start|center"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="@dimen/_50sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/recent_airport_locations"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/llMyCurrentLocation"
                    app:typeface="MULI_EXTRA_BOLD" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@+id/btnAddNewLocation"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvRecentPassportLocation"
                    tools:listitem="@layout/row_current_location" />

                <com.namastey.customViews.CustomButton
                    android:id="@+id/btnAddNewLocation"
                    style="@style/btnRedAllCornerStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:drawableStart="@drawable/ic_close_square"
                    android:drawablePadding="@dimen/_6sdp"
                    android:gravity="center"
                    android:paddingStart="@dimen/_60sdp"
                    android:paddingEnd="@dimen/_60sdp"
                    android:text="@string/add_a_new_location"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:typeface="MULI_EXTRA_BOLD" />

                <!-- </LinearLayout>-->

                <FrameLayout
                    android:id="@+id/flContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:fitsSystemWindows="true"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHeader" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- <com.namastey.customViews.CustomButton
             android:id="@+id/btnAddNewLocation"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_centerInParent="true"
             android:layout_marginBottom="@dimen/_24sdp"
             android:background="@drawable/rounded_red_solid"
             android:drawableStart="@drawable/ic_location"
             android:drawablePadding="@dimen/_6sdp"
             android:gravity="center"
             android:paddingStart="@dimen/_30sdp"
             android:paddingEnd="@dimen/_30sdp"
             android:text="@string/add_a_new_location"
             android:textAllCaps="false"
             android:textColor="@color/colorWhite"
             android:textSize="16sp"
             app:typeface="MULI_EXTRA_BOLD" />-->

    </RelativeLayout>
</layout>