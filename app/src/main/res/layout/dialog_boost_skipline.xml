<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardPreventCornerOverlap="true"
        tools:ignore="SpUsage">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/conBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/dialog_offread_gradiant"
                android:paddingBottom="@dimen/_32sdp">

                <com.namastey.customViews.CustomTextView
                    android:id="@+id/tvtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:gravity="center"
                    android:text="Get Boost Gold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:typeface="MULI_SEMIBOLD" />

                <com.namastey.customViews.RoundImageView
                    android:id="@+id/ivIcon"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:src="@drawable/ic_cards_boots"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvtitle" />


                <com.namastey.customViews.CustomTextView
                    android:id="@+id/tvText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:text="@string/skip_the_line"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    app:layout_constraintTop_toBottomOf="@+id/ivIcon"
                    app:typeface="MULI_EXTRA_BOLD" />

                <com.namastey.customViews.CustomTextView
                    android:id="@+id/tvText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="Be the top profile in your area for \n30 minutes to get more matches."
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    app:fontFamily="Muli-SemiBold"
                    app:layout_constraintTop_toBottomOf="@+id/tvText1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBuy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:background="@color/gradient_three_end"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintTop_toBottomOf="@+id/conBackground">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constHigh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent">

                    <View
                        android:id="@+id/viewBgHigh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/colorLightPink"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvOfferHigh"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/circle_left_right_red"
                        android:elevation="@dimen/_4sdp"
                        android:gravity="center"
                        android:text="@string/most_popular"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:visibility="invisible"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/viewSelectedHigh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/rectangle_all_corner_red"
                        android:visibility="invisible" />

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvTextHigh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_32sdp"
                        android:gravity="center"
                        android:text="@string/_10"
                        android:textSize="@dimen/_20sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:typeface="MULI_EXTRA_BOLD" />

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvTextBoostHigh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/boosts"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintTop_toBottomOf="@+id/tvTextHigh"
                        app:typeface="MULI_EXTRA_BOLD" />

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvTextHighEachBoost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintTop_toBottomOf="@+id/tvTextBoostHigh"
                        app:typeface="MULI_EXTRA_BOLD" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constMedium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/viewBgMedium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/white"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvOfferMedium"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/circle_left_right_red"
                        android:elevation="@dimen/_4sdp"
                        android:gravity="center"
                        android:text="@string/save_20"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:visibility="visible"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/viewSelectedMedium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/rectangle_all_corner_red"
                        android:visibility="visible" />

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvTextMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_32sdp"
                        android:gravity="center"
                        android:text="@string/_5"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/_20sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:typeface="MULI_EXTRA_BOLD" />

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvTextBoostMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/boosts"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintTop_toBottomOf="@+id/tvTextMedium"
                        app:typeface="MULI_EXTRA_BOLD" />

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvTextMediumEachBoost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintTop_toBottomOf="@+id/tvTextBoostMedium"
                        app:typeface="MULI_EXTRA_BOLD" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constLow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/viewBgLow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/colorLightPink"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvOfferLow"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/circle_left_right_red"
                        android:elevation="@dimen/_4sdp"
                        android:gravity="center"
                        android:text="@string/most_popular"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:visibility="invisible"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/viewSelectedLow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/rectangle_all_corner_red"
                        android:visibility="invisible" />

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvTextLow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_32sdp"
                        android:gravity="center"
                        android:text="@string/_1"
                        android:textSize="@dimen/_20sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:typeface="MULI_EXTRA_BOLD" />

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvTextBoostLow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/boosts"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintTop_toBottomOf="@+id/tvTextLow"
                        app:typeface="MULI_EXTRA_BOLD" />

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvTextLowEachBoost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintTop_toBottomOf="@+id/tvTextBoostLow"
                        app:typeface="MULI_EXTRA_BOLD" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <com.namastey.customViews.CustomButton
                android:id="@+id/btnBoost"
                style="@style/btnRedStyle"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_32sdp"
                android:layout_marginEnd="@dimen/_48sdp"
                android:elevation="@dimen/_4sdp"
                android:gravity="center"
                android:text="@string/boost_me"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/llBuy" />

            <com.namastey.customViews.CustomTextView
                android:id="@+id/tvNothanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:gravity="center"
                android:paddingBottom="@dimen/_16sdp"
                android:text="@string/no_thanks"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintTop_toBottomOf="@+id/btnBoost"
                app:typeface="MULI_EXTRA_BOLD" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>