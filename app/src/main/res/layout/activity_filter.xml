<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.FilterActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.namastey.viewModel.FilterViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/llFilterBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yellow_bar"
                    android:contentDescription="@string/app_name"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/ivFilterBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:contentDescription="@string/app_name"
                    android:onClick="onClickFilterBack"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_back_new"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.namastey.customViews.CustomTextView
                    style="@style/tvWrapBlackStyle"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/discover"
                    android:textSize="@dimen/actionBarTitle"
                    app:layout_constraintBottom_toBottomOf="@id/ivFilterBack"
                    app:layout_constraintStart_toEndOf="@id/ivFilterBack"
                    app:layout_constraintTop_toTopOf="@id/ivFilterBack"
                    app:typeface="MULI_SEMIBOLD" />

                <ImageView
                    android:id="@+id/ivInvite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:contentDescription="@string/app_name"
                    android:onClick="onClickInvite"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_mail_new"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/llSearchView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/rounded_white_solid_white_corner"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivFilterBack">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchFilter"
                        style="@style/searchViewStyle"
                        app:defaultQueryHint="@string/search"
                        app:iconifiedByDefault="false"
                        app:queryHint="@string/search"
                        app:queryBackground="@color/color_search"
                        app:searchHintIcon="@drawable/ic_search" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFilterSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingStart="@dimen/_10sdp"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/row_user_suggested" />

                </LinearLayout>

                <com.namastey.customViews.CustomTextView
                    android:id="@+id/tvTranding"
                    style="@style/tvWrapBlackStyle"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/trending"
                    app:layout_constraintStart_toStartOf="@id/llSearchView"
                    app:layout_constraintTop_toBottomOf="@id/rvSubcategory"
                    app:typeface="MULI_SEMIBOLD" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFilterTranding"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:outlineSpotShadowColor="@color/colorGray"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTranding"
                    app:spanCount="2"
                    tools:listitem="@layout/row_album_detail" />
                <LinearLayout
                    android:id="@+id/llEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingBottom="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTranding">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_80sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        app:cardBackgroundColor="@color/white">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_15sdp">

                            <ImageView
                                android:id="@+id/ivMaleFemale"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/empty_male_female"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.namastey.customViews.CustomTextView
                                android:id="@+id/tvEmptyFollow"
                                style="@style/tvWrapWhiteStyle"
                                android:layout_width="0dp"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:text="@string/nofollowers"
                                android:textColor="@color/colorBlack"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/ivMaleFemale"
                                app:layout_constraintStart_toEndOf="@id/ivMaleFemale"
                                app:layout_constraintTop_toTopOf="@id/ivMaleFemale"
                                app:typeface="MULI_SEMIBOLD" />

                            <com.namastey.customViews.CustomTextView
                                android:id="@+id/tvEmptyFollowMsg"
                                style="@style/tvWrapWhiteStyle"
                                android:layout_marginTop="@dimen/_35sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:gravity="center"
                                android:maxLines="3"
                                android:text="@string/msg_empty_followers_title"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlack"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tvEmptyFollow" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <com.namastey.customViews.CustomTextView
                    android:id="@+id/tvNoFilterVideo"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="@string/tv_no_video_found"
                    android:textSize="22sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTranding" />

                <com.namastey.customViews.CustomTextView
                    android:id="@+id/tvFiltes"
                    style="@style/tvWrapWhiteStyle"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/filters"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintStart_toStartOf="@id/llSearchView"
                    app:layout_constraintTop_toBottomOf="@id/llSearchView"
                    app:typeface="MULI_SEMIBOLD" />

                <HorizontalScrollView
                    android:id="@+id/nestedFilter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFiltes"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">


                        <com.namastey.customViews.CustomTextView
                            android:id="@+id/tvFollowing"
                            style="@style/tvWrapWhiteStyle"
                            android:onClick="onFollowingClick"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/following"
                            android:textColor="@color/color_text_red"
                            android:textSize="14sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvFilterCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:nestedScrollingEnabled="false"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/row_filter_category" />

                    </LinearLayout>
                </HorizontalScrollView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSubcategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_12sdp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nestedFilter"
                    tools:listitem="@layout/row_filter_subcategory" />
                <!--        <LinearLayout-->
                <!--            android:orientation="vertical"-->
                <!--            android:id="@+id/llFilterTransparent"-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="match_parent"-->
                <!--            android:background="@color/black_overlay"-->
                <!--            app:layout_constraintEnd_toEndOf="parent"-->
                <!--            app:layout_constraintStart_toStartOf="parent"-->
                <!--            app:layout_constraintTop_toTopOf="parent"-->
                <!--            app:layout_constraintBottom_toBottomOf="parent"/>-->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <FrameLayout
            android:id="@+id/flContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </FrameLayout>
</layout>
