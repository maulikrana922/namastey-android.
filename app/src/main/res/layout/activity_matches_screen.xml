<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.MatchesScreenActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.namastey.viewModel.MatchesScreenViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_text_red">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_32sdp"
                        android:src="@drawable/balloon_orange"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_78sdp"
                        android:src="@drawable/balloon_green"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_107sdp"
                        android:src="@drawable/rectangle_238"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_112sdp"
                        android:src="@drawable/rectangle_239"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_36sdp"
                        android:src="@drawable/circle_orange_hollow"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/_80sdp"
                        android:layout_marginEnd="@dimen/_24sdp"
                        android:src="@drawable/circle_white_hollow"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvCongratulations"
                        style="@style/tvWrapWhiteStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_50sdp"
                        android:gravity="center"
                        android:text="@string/it_s_match"
                        android:textSize="40sp"
                        app:typeface="MULI_EXTRA_BOLD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/_150sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.namastey.customViews.RoundImageView
                            android:id="@+id/ivProfile1"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_105sdp"
                            android:background="@drawable/rounded_white_solid_white_corner"
                            android:contentDescription="@string/app_name"
                            android:padding="@dimen/_5sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_placeholder"
                            app:cornerRadius="@dimen/_10sdp"
                            app:roundedCorners="all" />

                        <com.namastey.customViews.RoundImageView
                            android:id="@+id/ivProfile2"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_105sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_white_solid_white_corner"
                            android:contentDescription="@string/app_name"
                            android:padding="@dimen/_5sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_placeholder"
                            app:cornerRadius="@dimen/_10sdp"
                            app:roundedCorners="all" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_gravity="center|bottom"
                        android:layout_marginStart="@dimen/_100sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:src="@drawable/circle_pink_hollow"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                </FrameLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp">

                    <ImageView
                        android:id="@+id/imgBottomHeart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/_12sdp"
                        android:src="@drawable/ic_match_bottom_heart"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/imgTopHeart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:paddingStart="@dimen/_12sdp"
                        android:src="@drawable/ic_match_top_heart"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.namastey.customViews.CustomTextView
                    android:id="@+id/tvItsMatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp"
                    app:typeface="MULI_EXTRA_BOLD" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mainGoToChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/rounded_white_solid_white_corner"
                    android:onClick="onClickOpenChat">

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvGoToChat"
                        style="@style/tvWrapWhiteStyle"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:text="@string/send_a_message"
                        android:textColor="@color/color_text_red"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:typeface="MULI_SEMIBOLD" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mainBackToNamastey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/rounded_white_border_transparent_solid"
                    android:onClick="onClickBack">

                    <com.namastey.customViews.CustomTextView
                        android:id="@+id/tvBackToNamastey"
                        style="@style/tvWrapWhiteStyle"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:text="@string/back_to_namastey"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:typeface="MULI_SEMIBOLD" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.namastey.customViews.CustomTextView
                    android:id="@+id/tvShareWithFriends"
                    style="@style/tvWrapWhiteStyle"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:drawableStart="@drawable/ic_match_share"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:onClick="onClickShare"
                    android:text="@string/share_with_friends"
                    android:textSize="14sp"
                    app:typeface="MULI_SEMIBOLD" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationStar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/star"
            app:lottie_repeatMode="restart" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationRibbon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ribbon"
            app:lottie_repeatMode="restart" />
    </RelativeLayout>
</layout>