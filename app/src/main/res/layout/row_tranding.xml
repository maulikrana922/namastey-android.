<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/_5sdp"
    android:paddingStart="@dimen/_5sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivTrandingUser"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:src="@drawable/default_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

        <com.namastey.customViews.CustomTextView
            android:id="@+id/tvTrandingUsername"
            style="@style/tvWrapWhiteStyle"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/_3sdp"
            app:layout_constraintTop_toBottomOf="@id/ivTrandingUser"
            app:layout_constraintStart_toStartOf="@id/ivTrandingUser"
            app:layout_constraintEnd_toEndOf="@id/ivTrandingUser"/>

</androidx.constraintlayout.widget.ConstraintLayout>