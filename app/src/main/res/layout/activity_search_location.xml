<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.SearchLocationActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.namastey.viewModel.LocationViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.SearchLocationActivity" />

        <!--<fragment
            android:id="@+id/place_autocomplete_fragment"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/_25sdp"
            android:visibility="gone"
            tools:context=".activity.SearchLocationActivity" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivSearchLocationBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_back_new"
                    android:onClick="onClickPassportContentBack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.namastey.customViews.CustomTextView
                    android:id="@+id/tvPassport"
                    style="@style/tvWrapBlackStyle"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/airport"
                    android:textSize="@dimen/actionBarTitle"
                    app:layout_constraintBottom_toBottomOf="@id/ivSearchLocationBack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivSearchLocationBack"
                    app:layout_constraintTop_toTopOf="@id/ivSearchLocationBack"
                    app:typeface="MULI_SEMIBOLD" />


            </androidx.constraintlayout.widget.ConstraintLayout>


<!--            <ImageView
                android:id="@+id/ivSearchLocationBack"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:background="@drawable/rounded_white_solid_all_corner"
                android:contentDescription="@string/app_name"
                android:onClick="onClickSearchLocationBack"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_close"
                android:tint="@color/colorBlack" />-->

            <LinearLayout
                android:background="@drawable/rounded_btn"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_height="40dp">

                <fragment
                    android:id="@+id/place_autocomplete_fragment"
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_facebook"
                    android:visibility="visible"
                    tools:context=".activity.SearchLocationActivity" />

            </LinearLayout>

        </LinearLayout>

        <!-- <fragment
             android:id="@+id/place_autocomplete_fragment1"
             android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="top"
             android:layout_marginTop="@dimen/_25sdp"
             android:visibility="gone"
             tools:context=".activity.SearchLocationActivity" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivSearchLocationBack1"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:background="@drawable/rounded_white_solid_all_corner"
                android:contentDescription="@string/app_name"
                android:onClick="onClickSearchLocationBack"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_close"
                android:tint="@color/colorBlack" />

            <LinearLayout
                android:id="@+id/llSearchSearchLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/rounded_white_solid"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llFilterBackground">


                <EditText
                    android:id="@+id/searchDestination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center|start"
                    android:hint="@string/enter_destination"
                    android:inputType="text"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:visibility="visible"
                    app:searchHintIcon="@drawable/ic_search" />

                <ImageView
                    android:id="@+id/ivLocation"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:src="@drawable/ic_current_location"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</layout>
