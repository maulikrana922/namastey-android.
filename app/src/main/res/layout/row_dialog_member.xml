<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/con_slider_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/_32sdp">

    <com.namastey.customViews.CustomTextView
        android:id="@+id/tv_slider_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="center"
        android:text="@string/get_namastey_elite"
        android:textColor="@color/color_text_red"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:typeface="MULI_SEMIBOLD" />

    <ImageView
        android:id="@+id/iv_slider_Icon"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:src="@drawable/ic_cards_super_like"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_slider_title" />

    <com.namastey.customViews.CustomTextView
        android:id="@+id/tv_Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/get_namastey_gold"
        android:textColor="@color/color_black_text"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_slider_Icon"
        app:layout_constraintRight_toRightOf="@id/iv_slider_Icon"
        app:layout_constraintTop_toBottomOf="@+id/iv_slider_Icon"
        app:typeface="MULI_EXTRA_BOLD" />

    <com.namastey.customViews.CustomTextView
        android:id="@+id/tv_Text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/ok"
        android:textColor="@color/color_black_text"
        android:textSize="@dimen/_12sdp"
        app:fontFamily="Muli-SemiBold"
        app:layout_constraintBottom_toBottomOf="@id/tv_Text1"
        app:layout_constraintStart_toEndOf="@id/tv_Text1"
        app:layout_constraintTop_toBottomOf="@+id/iv_slider_Icon" />

    <com.namastey.customViews.CustomTextView
        android:id="@+id/tv_Text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:text="See Who likes You"
        android:textColor="@color/color_black_text"
        android:textSize="@dimen/_12sdp"
        app:fontFamily="Muli-SemiBold"
        app:layout_constraintTop_toBottomOf="@+id/tv_Text1" />


</androidx.constraintlayout.widget.ConstraintLayout>