<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F30C45</item>
        <item name="colorPrimaryDark">#F30C45</item>
        <item name="colorAccent">#F30C45</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!--    Used for rounded corner -->
    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cornerSizeTopRight">@dimen/_20sdp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/_20sdp</item>
        <item name="cardForegroundColor">@android:color/transparent</item>
    </style>

    <style name="CustomCardViewTopCornerStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_top_corners
        </item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_top_corners" parent="">
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="cornerSizeTopRight">@dimen/_20sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_20sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cardForegroundColor">@color/colorWhite</item>
    </style>

    <style name="CustomCardViewAllCornerStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_all_corners
        </item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_all_corners" parent="">
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="cornerSizeTopRight">@dimen/_20sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_20sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_20sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_20sdp</item>
        <item name="cardForegroundColor">@color/colorWhite</item>
    </style>

    <style name="dialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_up</item>
        <item name="android:windowExitAnimation">@anim/nothing</item>
    </style>

    <style name="tvWrapWhiteStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="tvWrapBlackStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/color_black_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="tvTitleStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="typeface">MULI_EXTRA_BOLD</item>
    </style>

    <style name="btnRedStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:background">@drawable/rounded_red_solid</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="typeface">MULI_SEMIBOLD</item>
    </style>

    <style name="btnLightBlueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:background">@drawable/rounded_light_blue_solid</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="typeface">MULI_SEMIBOLD</item>
    </style>

    <style name="tvRoundCornerStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:background">@drawable/rounded_white_solid</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="roundCornerStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:background">@drawable/rounded_white_solid</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
    </style>

    <style name="edtRoundCornerStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:background">@drawable/rounded_white_solid</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:textSize">14sp</item>
        <item name="hintTextColor">@color/colorDarkGray</item>
        <item name="android:ellipsize">end</item>
        <item name="typeface">MULI_SEMIBOLD</item>
    </style>

    <style name="searchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:textColorHint">@color/colorBlack</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem" />

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem" />

    <style name="FullScreenDialogTheme" parent="android:Theme.Dialog">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
