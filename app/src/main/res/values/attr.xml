<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTextView">
        <attr name="typeface"/>
    </declare-styleable>

    <declare-styleable name="CustomEditText">
        <attr name="typeface"/>
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="typeface"/>
    </declare-styleable>

    <attr name="typeface" format="enum">
        <enum name="MULI_REGULAR" value="0"/>
        <enum name="MULI_LIGHT" value="1"/>
        <enum name="MULI_SEMIBOLD" value="2"/>
        <enum name="MULI_BLACK" value="3"/>
        <enum name="MULI_EXTRA_BOLD" value="4"/>
    </attr>

    <declare-styleable name="IconButton">
        <attr name="iconSrc" format="reference" />
        <attr name="iconSize" format="dimension" />
        <attr name="iconPadding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="NamasteySplashView">
        <attr name="icon" format="reference"/>
        <attr name="iconColor" format="color"/>
        <attr name="holeFillColor" format="color"/>
        <attr name="duration" format="integer"/>
        <attr name="removeFromParentOnEnd" format="boolean"/>
    </declare-styleable>
</resources>