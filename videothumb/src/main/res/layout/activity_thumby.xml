<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp" />

    <org.buffer.android.thumby.CenterCropVideoView
        android:id="@+id/view_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/thumbs"
        android:layout_below="@+id/toolbar" />

    <org.buffer.android.thumby.ThumbnailTimeline
        android:id="@+id/thumbs"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/frames_video_height"
        android:layout_above="@+id/cvGallery"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="34dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvGallery"
        app:cardCornerRadius="6sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/rlGallery"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:background="@color/bg_color"
            android:gravity="center"
            android:onClick="onClickGallery"
            android:visibility="visible">

            <TextView
                android:id="@+id/addGallery"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_add"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:text="@string/add_from_gallery"
                android:textColor="@color/text_Color"
                android:textSize="16sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>